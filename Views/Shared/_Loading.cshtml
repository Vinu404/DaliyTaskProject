
<div id="loading">
    <img id="loading-image" src="~/Content/img/loading-gif.gif" alt="Loading..." />

</div>
<style>
    #loading {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
        
    }

    #loading-image {
        z-index: 100;
        
    }
</style>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(window).on('load', function () {
        $('#loading').hide();
    })
</script>

<script>
    $(document).ready(function () {
        $("body a href").click(function () {
            $('#loading').show();
        });
    });
</script>

