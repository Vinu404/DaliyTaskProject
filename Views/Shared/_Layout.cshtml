<body style="zoom: 75%; overflow: scroll; background: #ebeff3; ">
    <header style="background-color: #e5d8d8; border-bottom: 3.5px solid #f75707;" id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">
            <nav style="margin-left:-17rem" id="navbar" class="navbar">

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <ul>


                            <li class="dropdown">
                                <a style="color: #f3580a;font-weight:bold;font-size:20px" href="#"><span>Task</span> <i class="bi bi-chevron-down"></i></a>
                                <ul>
                                    <li><a style="color:black" href="@Url.Action("ADDTASK", "Home")">Fresh</a></li>
                                    <li><a style="color:black" href="@Url.Action("Modification", "Home")">Modifications</a></li>
                                    <li><a style="color:black" href="@Url.Action("Email", "User")">Email Send</a></li>
                                    <li><a style="color:black" href="@Url.Action("CreateUser", "User")">Create User</a></li>


                                </ul>
                            <li><a style="font-weight:bold;font-size:20px" class="nav-link scrollto active" href="@Url.Action("ReportsAdmin", "Home")">Reports</a></li>




                        </ul>
                    }

                    else if (User.IsInRole("User"))
                    {
                        <ul>

                            <li style="font-weight:bold;font-size: 20px;"><a class="nav-link scrollto active" href="@Url.Action("Reports", "Home")">Task</a></li>



                        </ul>
                    }

                }


            </nav><!-- .navbar -->

            <div class="logo">
                <h1 style="margin-left:6rem;font-weight:600" class="text-light"><a style="color:black" href="index.html"><span>Daily Task Management</span></a></h1>

            </div>
            <nav style="margin-right:-19rem" id="navbar" class="navbar">

                <ul>
                    <li style="font-weight: bold; padding-left: 2rem; color: #dd5511;font-size:20px"><i style="color:black" class="fa fa-user" aria-hidden="true"></i> Welcome ,@User.Identity.Name</li>
                    <li><a class="getstarted scrollto" href="@Url.Action("Logout","User")">Logout</a></li>
                </ul>


            </nav>

        </div>
    </header>

    @Html.Partial("_Loading")


    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
    </footer>
    @Scripts.Render("~/bundles/jquery")
   
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
